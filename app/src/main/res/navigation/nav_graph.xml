<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/riderFragment"
        android:name="com.otarbakh.motogp.ui.riders.RiderFragment"
        android:label="fragment_rider"
        tools:layout="@layout/fragment_rider" />
    <fragment
        android:id="@+id/teamsFragment"
        android:name="com.otarbakh.motogp.ui.teams.TeamsFragment"
        android:label="fragment_teams"
        tools:layout="@layout/fragment_teams" >
        <action
            android:id="@+id/action_teamsFragment_to_favoritesFragment"
            app:destination="@id/favoritesFragment" />
    </fragment>
    <fragment
        android:id="@+id/stagesFragment"
        android:name="com.otarbakh.motogp.ui.stages.StagesFragment"
        android:label="fragment_stages"
        tools:layout="@layout/fragment_stages" >
        <action
            android:id="@+id/action_stagesFragment_to_recentStagesFragment"
            app:destination="@id/recentStagesFragment" />
        <action
            android:id="@+id/action_stagesFragment_to_upComingStagesFragment"
            app:destination="@id/upComingStagesFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.otarbakh.motogp.ui.favourite.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.otarbakh.motogp.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.otarbakh.motogp.ui.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_teamsFragment"
            app:destination="@id/teamsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_riderFragment"
            app:destination="@id/riderFragment" />
        <action
            android:id="@+id/action_mainFragment_to_favoritesFragment2"
            app:destination="@id/favoritesFragment" />
        <action
            android:id="@+id/action_mainFragment_to_ticketsFragment"
            app:destination="@id/ticketsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_recentStagesFragment"
            app:destination="@id/recentStagesFragment" />
        <action
            android:id="@+id/action_mainFragment_to_upComingStagesFragment"
            app:destination="@id/upComingStagesFragment" />

    </fragment>
    <fragment
        android:id="@+id/ticketsFragment"
        android:name="com.otarbakh.motogp.TicketsFragment"
        android:label="fragment_tickets"
        tools:layout="@layout/fragment_tickets" />
    <fragment
        android:id="@+id/recentStagesFragment"
        android:name="com.otarbakh.motogp.ui.stages.recent.RecentStagesFragment"
        android:label="RecentStagesFragment" />
    <fragment
        android:id="@+id/upComingStagesFragment"
        android:name="com.otarbakh.motogp.ui.stages.upcoming.UpComingStagesFragment"
        android:label="UpComingStagesFragment" >
        <action
            android:id="@+id/action_upComingStagesFragment_to_ticketsFragment"
            app:destination="@id/ticketsFragment" />
    </fragment>
</navigation>